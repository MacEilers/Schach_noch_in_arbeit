import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.nio.file.FileStore;

public class Brett_user implements ActionListener {
    JFrame frame;
    JButton[][] position = new JButton[8][8];
    JPanel panel;
    
    Brett_user(String Sb[][][]){
        frame = new JFrame("Schach");
        frame.setSize(800, 800);
	frame.setLayout(null);
	frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        
        panel = new JPanel();
		panel.setBounds(100, 100, 600, 600);
                
                
		panel.setLayout(new GridLayout(8, 8, 8, 8));
                
                
                
                
                //Sb[0][0] = Figur(0,0,"T","W");
                
        
        for (int i = 0; i < 8; i++) {
            for (int j = 0; j < 8; j++) {
                String helper;
                
                    if(Sb[i][j][1] !=""){
                        helper = "B_"+Sb[i][j][1];
                    }
                    else if (Sb[i][j][2]!=""){
                        helper="W_"+Sb[i][j][2];
                    }
                    else{
                        helper="";
                    }
                    
                
               
                    
		position[i][j] = new JButton(helper);
		position[i][j].addActionListener(this);
                
                
                
                panel.add(position[i][j]);
		
		
            }
	}
        frame.add(panel);
        frame.setVisible(true);


    }
    public static void main(String[] args) {
		// TODO Auto-generated method stub
                String [][][] SB = new String[8][8][3];
                
                for (int i = 0; i < 8; i++) {
                    for (int j = 0; j < 8; j++) {
                        for (int k = 0; k < 3; k++) {
                            SB[i][j][k] ="";
                        }
                        
                    }
            
        }
                //0=lehr,2=Weis,1=Schwarz
                SB[0][0][1] ="T";
                SB[0][1][1] ="SP";
                SB[0][2][1] ="L";
                SB[0][3][1] ="Q";
                SB[0][4][1] ="K";
                SB[0][5][1] ="L";
                SB[0][6][1] ="SP";
                SB[0][7][1] ="T";
                
                for (int i = 0; i < 8; i++) {
                     SB[1][i][1] ="B";
                     SB[6][i][2] ="B";
                     
                }
                
                SB[7][0][2] ="T";
                SB[7][1][2] ="SP";
                SB[7][2][2] ="L";
                SB[7][3][2] ="Q";
                SB[7][4][2] ="K";
                SB[7][5][2] ="L";
                SB[7][6][2] ="SP";
                SB[7][7][2] ="T";
                
        
		Brett_user Brett_user = new Brett_user(SB);
	}
    
